{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true
  },
  "include": ["./packages/**/*.js", "./packages/**/*.d.ts"],
  "exclude": ["./node_modules", "dist", "**/*.test.js", "./*.js"]
}
